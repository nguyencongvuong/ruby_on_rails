<%content_for :content do %>
	<ul>
	
	</ul>
	<div class="col-lg-6">
	<%@arr=["tin tuc",1],["the thao",2] %>

	<%=form_for :category, url: {action:"save"} do |f| %>
		<%=f.label :name %>
		<%=f.text_field :name,class: "form-control" %>
		<%=f.label :slug %>
		<%=f.text_field :slug,class: "form-control" %>
		<%=f.label :description %>
		<%=f.text_field :description,class: "form-control" %>
		<%=f.submit "Create",class: "btn  btn-default" %>
		<% 
		Category.all.each do |cat|%>
		<% 
		@array=[cat.name,cat.id]%>
		
		<%end%>
		<%  def dequy(parent=0,char="")
            @category=Category.all
            @children=[] 
            @i=0
            @category.each do |cat|
                if cat.parent==parent
                    @children.push(cat)
                end
            end %>
            <% @children.each do |value,key|
                %>
                <% if value.parent==0 %>
                <% @char=""%>
                <%else%>
                 <% @char+="-"%>
                <%end%>
              <%=raw "<option value='#{value.id}'>" %>
                <%=@char+value.name%>
              <%=raw '</option>' %>
                <%
                dequy(value.id,@char) 
            end %>
            <%end%> 
<%=raw "<select name='category[parent]' id='parent'>"%>  
<option value='0'>Select Parent</option>                
<%= dequy%>
<%=raw "</select>"%>  
	<%end%>

	</div>

<div class="col-lg-6">
	
	<%Category.all.each do |c,key| %>
		<% if c.parent == 0   %>
		
		<%end%>
	<%end%>
	<table  width="100%" class="table table-bordered">
		<tr>
			<th>Tên</th>
			<th>Slug</th>
			<th>Parent</th>
			<th>Số bài viết</th>
			<th colspan="2">Thao Tác</th>
		</tr>
		<% if Category.all.size==0 %>
		<td colspan="5">Không Tồn Tại</td>
		<%end%>
		<%@phantrang=paginate(5,admin_category_path(),Category)%>    
        <%@phantrang[:query].each do |c,key| %>
		
		<tr>
			<td><%=c.name %></td>
			<td><%=c.slug %></td>
			<td><%=c.parent %></td>
			<td><%=New.where(category_id:c.id).size %></td>
			<td ><%=  button_to admin_category_delete_path(c.id),method: "delete",data: {confirm:'Are you sure you want to delete this password?'},class:"btn btn-danger"  do%>
				<span class="glyphicon glyphicon-trash"></span>
				<%end%>		
			</td>
			<td><%=button_to admin_category_edit_path(c.id),data: {confirm:'Are you sure you want to delete this password?'},class:"btn btn-success",method:"PUT" do%>
                <span class="glyphicon glyphicon-edit"></span>
				<%end%>
			</td>
		</tr>
		<%end%>
	</table>
	<div class="col-xs-12" style="text-align: center;">  
        <ul class="pagination" >
            <%@phantrang[:link].each do |url|%>
            <%=url %>
            <%end%>
        </ul>
     </div>
</div>
 	
	<%end%>

	
	
	
	
