 <%content_for :content do %>
 <%=button_to "Thêm Mới",admin_themmoi_path(),{class:"btn btn-primary btn-md",method:"get"}%>
 <div class="col-lg-12">
                        <h2>Danh Sách Bài Viết</h2>
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Slug</th>
                                        <th>Description</th>
                                        <th>Author</th>
                                        <th>Created_at</th>
                                        <th>Updated_at</th>
                                        <th colspan="2">Thao Tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                <%@news.each do |new| %>
									 <tr>
                                        <td><%=new.title%></td>
                                        <td><%=new.slug%></td>
                                        <td><%=new.description%></td>
                                        <td><%=new.author_id%></td>
                                        <td><%=new.created_at%></td>
                                        <td><%=new.updated_at%></td>
                                        <td><%=button_to admin_delete_path(new),method:"delete",class:"btn btn-danger",data: {confirm:"Bạn có chắc chắn muốn xóa"} do%>
                                         <span class="glyphicon glyphicon-trash"></span>
                                            <%end%>
                                        </td>
                                        <td><%=button_to admin_delete_path(new),method:"put",class:"btn btn-success",data: {confirm:"Bạn có chắc chắn muốn xóa"} do%>
                                         <span class="glyphicon glyphicon-edit"></span>
                                            <%end%>
                                        </td>
                                    </tr>
                                <%end%>
                                   
                                 
                                </tbody>
                            </table>
                        </div>
                    </div>
                
                <!-- /.row -->
<%end%>



